    <div class="col s12">
        <div class="card center-align">
            <div class="card-action">
                
                {{!Change: add 'referrerpolicy="no-referrer"' to stop Google from blocking access to the profile images}}
                <img src="{{profile.image}}" referrerpolicy="no-referrer" class="circle responsive-img img-small"><br>
                <span class="card-title">{{profile.displayName}}</span><br><br>
                <form action="/profile/{{profile._id}}/follow" method="POST" id="follow-form">
                <input type="hidden" name="_method" value="PUT">
                    {{#if following}}
                <button type="submit"class="btn grey darken-1">
                    <i class="material-icons small">
                        Unfollow
                    </i>
                 </button>
                    {{else}}
                      <button type="submit"class="btn yellow darken-3">
                    <i class="material-icons small">
                        Follow
                    </i>
                 </button>
                    {{/if}}
            </form>

            </div>
        </div>
    </div> 
