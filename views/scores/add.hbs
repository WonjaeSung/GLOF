 
{{!-- this link is need to to use Materialize icon --}}
 <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<h3>Post a Score</h3>
    <div class="row">   
        <form action="/scores" method="post" class="col s12">
            <div class="row">
                <div class="input-field">
                    <input type="number" id="score" name="score">
                    <label for="score">Score</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field">
                    {{!-- what does select tag do for us? It creates a shell of a dropdown --}}
                    {{!-- *** name attribute is how MongoDB identifies its schema's key name.  --}}
                    <input type="date" id="date" name="date">
                    <label for="date">Date</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field">
                   <input type="text" id="course_rating" name="course_rating">
                   <label for="course_rating">Course Rating</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field">
                   <input type="number" id="slope" name="slope">
                   <label for="slope">Slope</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field">
                   <input type="text" id="courseName" name="courseName">
                   <label for="courseName">Course</label>
                </div>
            </div>

            <div class="row">
                <button type="submit" value="Post" class="btn waves-effect waves-light" name="action">Post<i class="material-icons right">send</i></button>
                <a href="/dashboard" class="btn orange">Cancel</a>
            </div>
        </form>
    </div>